{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "build",
      "rootDir": "src",
      "noImplicitAny": true,
      "sourceMap": true,
      "useUnknownInCatchVariables": false
      },
      "exclude": [
        "node_modules"
      ],
      "include": ["src/**/*", "./scripts"],
      "files": ["./hardhat.config.ts"]
}
